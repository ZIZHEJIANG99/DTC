              <div class="shop-dots">
                <span></span>
                <span></span>
                <span></span>
              </div>
              {%- unless collection.metafields.custom.column_2_title == blank -%}<a href="{{ collections[collection.metafields.custom.column_2_link].url }}"><h3 class="inline-richtext">{{ collection.metafields.custom.column_2_title }}</h3></a>{%- endunless -%}
              <div class="rte">
                {{ collection.metafields.custom.column_2_content }}
              </div>
            </div>
          </div>
        </li>
        {%- endif -%}
        {%- if collection.metafields.custom.column_1_title != blank or collection.metafields.custom.column_1_content != blank -%}
        <li id="Slide-template--14566747799624__07bda8e5-4abb-4b19-b5b5-17fa9312fc9c-1" class="shop-box-1 multicolumn-list__item grid__item">
          <div class="multicolumn-card content-container">
            <div class="multicolumn-card__info">
          
